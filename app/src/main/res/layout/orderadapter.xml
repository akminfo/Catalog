<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:paddingLeft="10dp"

        android:paddingRight="10dp"
        android:gravity="center_vertical"
        android:background="@drawable/order_view1"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="120dp"
            android:layout_height="45dp"
android:id="@+id/proimage"


  android:layout_gravity="center"
          />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#d0d0d0"/>
        </LinearLayout>

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:textColor="@color/menucolor"
            android:id="@+id/pronametext"
            android:gravity="center"
            android:text="Product Name"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#d0d0d0"/>
        </LinearLayout>

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:textColor="@color/menucolor"
            android:id="@+id/skutext"
            android:gravity="center"
            android:text="SKU"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#d0d0d0"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="120dp"
            android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:textColor="@color/menucolor"
                android:id="@+id/quantitytext"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginLeft="2dp"
                android:background="@drawable/approved_rounded"

                android:inputType="number"

                android:textSize="13dp"
                android:hint="Quantity"/>
            <ImageView
                android:layout_width="25dp"
                android:id="@+id/savequantity"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:src="@drawable/save"
                android:layout_height="25dp"
                />

</LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#d0d0d0"/>
        </LinearLayout>

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"
android:id="@+id/unittext"
            android:textColor="@color/menucolor"
            android:gravity="center"
            android:text="Unit Price"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="#d0d0d0"/>
        </LinearLayout>

        <TextView
            android:layout_width="120dp"
            android:layout_height="wrap_content"

            android:textColor="@color/menucolor"
            android:id="@+id/totaltext"
            android:gravity="center"
            android:text="Total"/>
        <!--<LinearLayout-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_marginLeft="10dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:orientation="vertical">-->
            <!--<View-->
                <!--android:layout_width="0.5dp"-->
                <!--android:layout_height="match_parent"-->
                <!--android:background="#d0d0d0"/>-->
        <!--</LinearLayout>-->

        <!--<TextView-->
            <!--android:layout_width="120dp"-->
            <!--android:layout_height="wrap_content"-->

            <!--android:textColor="@color/menucolor"-->
            <!--android:id="@+id/catname"-->
            <!--android:gravity="center"-->
            <!--android:text="Total Amount"/>-->



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"



        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <View
            android:layout_width="match_parent"
            android:layout_height="0.2dp"
            android:background="#d0d0d0"/>
    </LinearLayout>

</LinearLayout>