<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/l1"

        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"

        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">
            <CheckBox
                android:layout_width="wrap_content"
                android:id="@+id/ch"
                android:buttonTint="@color/colorPrimaryDark"
                android:layout_height="wrap_content" />


        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="@color/menucolor"
            android:id="@+id/proname1"
            android:textSize="13dp"
            android:layout_marginLeft="5dp"
            android:gravity="center"
            android:text="Product Name"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="@color/menucolor"/>
        </LinearLayout>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/menucolor"
            android:layout_marginLeft="10dp"
            android:id="@+id/procat1"
            android:textSize="13dp"
            android:gravity="center"
            android:text="Category"/>
        <LinearLayout
            android:layout_width="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="@color/menucolor"/>
        </LinearLayout>

        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textColor="@color/menucolor"
            android:id="@+id/sku1"
            android:textSize="13dp"
            android:gravity="center"
            android:text="SKU"/>
        <LinearLayout
            android:layout_width="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="@color/menucolor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="150dp"
android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <EditText
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:textColor="@color/menucolor"
            android:id="@+id/pricecount"
android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:layout_marginLeft="2dp"
            android:background="@drawable/price_rounded"

            android:inputType="numberDecimal"

            android:textSize="13dp"
            android:text="Price"/>
            <ImageView
                android:layout_width="25dp"
                android:id="@+id/saveprice"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:src="@drawable/save"
                android:layout_height="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="@color/menucolor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="150dp"
android:gravity="center"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:textColor="@color/menucolor"
android:id="@+id/quantitycount"
                android:inputType="number"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"

                android:layout_marginLeft="2dp"
                android:background="@drawable/price_rounded"

                android:textSize="13dp"
                android:text="Price"/>
            <ImageView
                android:layout_width="25dp"
android:id="@+id/savequant"
                android:layout_marginLeft="5dp"
                android:layout_gravity="center"
                android:src="@drawable/save"
                android:layout_height="25dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="@color/menucolor"/>
        </LinearLayout>
       <ImageView
           android:layout_width="150dp"
           android:layout_height="50dp"
           android:id="@+id/proimage"
           android:src="@drawable/noimage"/>
        <LinearLayout
            android:layout_width="0.5dp"
            android:layout_marginLeft="10dp"
            android:layout_height="fill_parent"
            android:orientation="vertical">
            <View
                android:layout_width="0.5dp"
                android:layout_height="fill_parent"
                android:background="@color/menucolor"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="150dp"
            android:layout_height="wrap_content"

android:gravity="center"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="25dp"
                android:id="@+id/editpro"

                android:src="@drawable/edit"
                android:layout_height="25dp"
                />
            <ImageView
                android:layout_width="25dp"
                android:src="@drawable/del_icon"
                android:id="@+id/delpro"

                android:layout_marginLeft="15dp"
                android:layout_height="25dp"
                />
        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"



            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <View
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:background="@color/menucolor"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>